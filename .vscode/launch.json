{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [{
		"type": "brightscript",
		"request": "launch",
		"name": "Tests",
		"presentation": {
			"group": "options"
		},
		"stopOnEntry": false,
		"preLaunchTask": "build-tests",
		"envFile": "${workspaceFolder}/.env",
		"host": "${env:LAUNCH_HOST_OVERRIDE}",
		"password": "${env:ROKU_PASSWORD}",
		"rootDir": "${workspaceFolder}/out/stage",
		"injectRaleTrackerTask": true,
		"enableDebuggerAutoRecovery": true,
		"sourceDirs": [
			"${workspaceFolder}/src"
		],
		"files": [
			"manifest",
			"source/**/*.*",
			"components/**/*.*",
			"images/**/*.*",
			"font/**/*.*",
			"!*.zip",
			"!**/*.zip"
		]
	},
	{
		"type": "brightscript",
		"request": "launch",
		"presentation": {
			"group": "options"
		},
		"name": "Sideload",
		"stopOnEntry": false,
		"preLaunchTask": "build", 
		"envFile": "${workspaceFolder}/.env",
		"host": "${env:LAUNCH_HOST_OVERRIDE}",
		"password": "${env:ROKU_PASSWORD}",
		"rootDir": "${workspaceFolder}/out/stage",
		"injectRaleTrackerTask": true,
		"enableDebuggerAutoRecovery": true,
		"sourceDirs": [
			"${workspaceFolder}/src"
		],
		"files": [
			"manifest",
			"source/**/*.*",
			"components/**/*.*",
			"images/**/*.*",
			"font/**/*.*",
			"!*.zip",
			"!**/*.zip",
			"!**/*.spec.bs"
		]
	},
	{
		"type": "brightscript",
		"request": "launch",
		"name": "DIST",
		"presentation": {
			"group": "options"
		},
    "preLaunchTask": "dist-project",
		"stopOnEntry": false,
		"host": "${env:LAUNCH_HOST_OVERRIDE}",
		"password": "${env:ROKU_PASSWORD}",,
		"rootDir": "${workspaceFolder}/out/stage",
		"deepLinkUrl": "${env:DEEP_LINK_URL}",
		"enableDebuggerAutoRecovery": true,
		"envFile": "${workspaceFolder}/.env",
		"injectRaleTrackerTask": true,
		"sourceDirs": [
			"${workspaceFolder}/src/"
		]
	}]
}