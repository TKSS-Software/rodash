' /**
' * @description entry point for the application. Runs a loop to keep the app alive while majority of app runs on SceneGraph side
' * @since 4.0
' */
sub main(inputEvent as Object)
	? "inputEvent", inputEvent
	screen = createObject("roSGScreen")
	m.port = createObject("roMessagePort")
	screen.setMessagePort(m.port)
	scene = screen.CreateScene("MainScene")
	screen.show()' vscode_rale_tracker_entry
	scene.observeField("closeApp", m.port)

	while true
		msg = wait(0, m.port)
		msgType = type(msg)

		if msgType = "roSGScreenEvent" then
			' Exit the main event loop resulting in the closure of the application
			if msg.isScreenClosed() then return
		else if msgType = "roSGNodeEvent" then
			field = msg.getField()
			' Exit the main event loop resulting in the closure of the application
			if field = "closeApp" then return
		end if
	end while
end sub